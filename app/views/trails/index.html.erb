<div class="row">
  <div class="column left">
    <h3>List of Trails</h3>
  </div>
  <div class="column right">
    <%= button_to "New Trail", new_trail_path, method: :get %>
  </div>
</div>

<article class="cards">
<% @trails.each do |trail| %>
  <article class="card">
    <%= link_to trail.name, trail %>
  </article>
<% end %>
</article>